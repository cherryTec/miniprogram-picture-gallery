.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  position: sticky;
  top: 0;
  z-index: 900;
}

.content-wrapper {
  padding: 32rpx;
}

.prompt-input {
  width: 100%;
  border-radius: 16rpx;
  margin-bottom: 32rpx;
  background-color: white;
}

.inspiration-button {
  margin-bottom: 32rpx;
}

.tag-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.tag {
  background-color: #ecf2fe;
  color: #0052d9;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 28rpx;
}

.tag-selected {
  background-color: #0052d9;
  color: white;
}

.generate-button {
  margin-bottom: 32rpx;
}

.negative-prompt {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 48rpx;
}

.negative-prompt-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.negative-input {
  width: 100%;
}

/* 提示词示例弹窗样式 */
.examples-container {
  padding: 40rpx;
  background-color: white;
  border-radius: 24rpx 24rpx 0 0;
  max-height: 80vh;
}

.examples-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}

.examples-list {
  margin-bottom: 32rpx;
}

.example-item {
  background-color: #f5f5f5;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.close-button {
  margin-top: 16rpx;
}