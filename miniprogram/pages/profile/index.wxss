.container {
  padding-bottom: 100rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  position: sticky;
  top: 0;
  z-index: 900;
}

/* 未登录状态 */
.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  height: calc(100vh - 240rpx);
}

.login-image {
  margin-bottom: 60rpx;
}

.login-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 80rpx;
}

.login-button {
  width: 100%;
  max-width: 600rpx;
}

/* 已登录状态 */
.user-profile {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 48rpx 32rpx;
  margin-bottom: 24rpx;
}

.avatar {
  margin-right: 32rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-tagline {
  font-size: 28rpx;
  color: #999;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin: 32rpx 32rpx 24rpx;
}

.masonry-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 24rpx;
  padding: 0 24rpx;
}

.image-card {
  border-radius: 24rpx;
  overflow: hidden;
  background-color: white;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.prompt-text {
  padding: 16rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  max-height: 128rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.create-button {
  position: fixed;
  right: 40rpx;
  bottom: 160rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #0052d9;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 82, 217, 0.3);
  z-index: 900;
} 