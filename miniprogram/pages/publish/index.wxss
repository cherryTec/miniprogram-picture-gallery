.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  position: sticky;
  top: 0;
  z-index: 900;
}

.content-wrapper {
  padding: 32rpx;
}

.image-container {
  border-radius: 24rpx;
  overflow: hidden;
  background-color: white;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
}

.prompt-display {
  padding: 32rpx;
  background-color: white;
  border-top: 1px solid #f0f0f0;
}

.prompt-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.prompt-content {
  font-size: 30rpx;
  color: #333;
}

.action-container {
  display: flex;
  gap: 24rpx;
}

.regenerate-button {
  flex: 4;
}

.publish-button {
  flex: 6;
} 